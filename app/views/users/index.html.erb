<p id="notice"><%= notice %></p>

<div class="account">
    <h1>ユーザーアカウント</h1>

    <div>
        <div><strong>ユーザー名 : </strong><%= @users.name %></div>
        <div><%= link_to '詳しくはこちら', @users %></div>
        <div><%= link_to '編集', edit_user_path(@users) %></div>
        <div><%= link_to '削除', @users, method: :delete, data: { confirm: 'Are you sure?' } %></div>
    </div>
    
    <%= button_to 'ログアウト', '/logout', :method => :delete %>
</div>